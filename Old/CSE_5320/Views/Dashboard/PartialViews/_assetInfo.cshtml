@model CSE_5320.Models.ViewModels.AssetInformationViewModel

<div class="modal fade bd-example-modal-lg" id="assetInfoModal" tabindex="-1" role="dialog" aria-labelledby="Asset information" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">
                    @Model.AssetName
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="">
                    <div class="">
                        <div class="card">
                            <div class="card-header">
                                Asset Specifications
                            </div>
                            <div class="card-body">
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th scope="row">Type</th>
                                            <td>@Model.AssetType</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">CPU</th>
                                            <td>@Model.CpuName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Memory</th>
                                            <td>@Model.Memory</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">OS</th>
                                            <td>@Model.OsName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Serial Number</th>
                                            <td>@Model.SerialNumber</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>