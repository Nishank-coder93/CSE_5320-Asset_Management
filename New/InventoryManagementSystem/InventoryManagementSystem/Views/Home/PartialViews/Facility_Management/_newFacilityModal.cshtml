
@model InventoryManagementSystem.Models.ViewModels.NewFacilityModel

<div class="modal" id="newFacilityModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Create a new Facility
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="new_facility_name">Name</label>
                        <input type="text" class="form-control" id="new_facility_name" aria-describedby="Name" placeholder="Enter the name of the Facility">
                    </div>
                    <div class="form-group">
                        <label for="new_facility_location">Location</label>
                        <input type="text" class="form-control" id="new_facility_location" aria-describedby="location" placeholder="Enter the location">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="float-right">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-outline-success" onclick="createFacility()">Create Facility</button>
                </div>
            </div>
        </div>
    </div>
</div>