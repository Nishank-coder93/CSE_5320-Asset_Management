@model CSE_5320.Models.Login.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "signin" }))
{
    @Html.AntiForgeryToken()
    <div class="text-center mb-4">
        <img class="mb-4" src="http://www.searchshark.ca/software/images/service8.png" alt="" width="100" height="92">
        <h1 class="h3 mb-3 font-weight-normal">Inventory Management</h1><hr />
        <p>Enter your username and password to continue</p>
    </div>

    <div class="form-label-group">
        @Html.TextBoxFor(l => l.Username, new { @class = "form-control", @placeholder = "Username", @requried = "required" })
        <label for="Username">Username</label>
    </div>

    <div class="form-label-group">
        @Html.PasswordFor(l => l.Password, new { @class = "form-control", @placeholder = "password", @requried = "required" })
        <label for="inputPassword">Password</label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted text-center">&copy; CSE 5320 - Group 8</p>
}
