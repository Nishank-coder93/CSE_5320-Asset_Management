@model CSE_5320.Models.Home.RequestModel

<div class="modal fade bd-example-modal-lg" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="Asset information" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">
                    Asset Request
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Model.AssetDetails.Count == 0)
                {
                    <div class="alert alert-warning" role="alert">
                        There are no available @Model.AssetType 
                    </div>
                }
                else
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Asset information</th>
                                <th scope="col">Till when do you want it?</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model.AssetDetails)
                            {
                                <tr>
                                    <th scope="row">
                                        @r.AssetName
                                    </th>
                                    <td>
                                        CPU: @r.CpuName @r.CpuVersion | OS: @r.OsName | Memory: @r.Memory
                                    </td>
                                    <td>
                                        @if (r.Available)
                                        {
                                            <input class="form-control" type="date" value="" id="requestDate_@r.AssetId">
                                        }
                                        else
                                        {
                                            <p>Available From: @r.AvailableFrom</p>
                                        }
                                    </td>
                                    <td>
                                        @if (r.Available)
                                        {
                                            <button type="button" class="btn btn-outline-primary" onclick="requestAsset(@r.AssetId)">Request</button>
                                        }
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>