<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/dashboard")
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-md fixed-top navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Group 7</a>
        <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                
            </ul>
            <form class="form-inline my-2 my-lg-0">
                @using (Html.BeginForm("logout", "Login",new { }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input class="btn btn-outline-light btn-sm" type="submit" value="Sign Out">
                }
            </form>
        </div>
    </nav>

    <div class="nav-scroller bg-white box-shadow">
        <nav class="nav nav-underline">
            <span class="nav-link active">@ViewBag.Title</span>
            <span class="nav-link">
                Hi Neil
            </span>
        </nav>
    </div>

    <div style="padding-top:30px">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dashboard")
    @RenderSection("scripts", required: false)

    <script>
        feather.replace();
    </script>
</body>
</html>
